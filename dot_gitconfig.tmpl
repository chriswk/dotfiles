[alias]
	ci = commit
	co = checkout
	backone = reset --hard HEAD~1
	st = status
	br = branch
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	type = cat-file -t
	dump = cat-file -p
	wipe = reset --hard HEAD
	amend = commit --amend
	spop = stash pop
[branch]
	autosetuprebase = always
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
        pager = "diff-so-fancy | less --tabs=4 -RFX"
[user]
        name = {{ .user }}
        email = {{ .email }}
        signingkey = {{ .signingkey }}
[push]
	default = current
[pull]
	default = current
        rebase = true
[commit]
        gpgsign = true
[color]
  diff = auto

[commit]
  gpgsign = true
